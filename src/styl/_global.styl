*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

.wrap
  position: relative
  width: 100%

html, body
  margin: 0
  padding: 0
  overflow-x: hidden

html
  font-size: 16px
  line-height: 1.5
  @media (min-width: 38em)
    font-size: 20px
  @media (min-width: 48em)
    font-size: 16px
  @media (min-width: 58em)
    font-size: 20px

body
  color: #515151
  background-color: #fff
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

a
  color: maincolor
  text-decoration: none
  strong
    color: inherit;
a:hover, :focus
    text-decoration: none
    color: tagshover

h1, h2, h3, h4, h5, h6
  // margin-bottom: .5rem
  font-weight: 400
  line-height: 1.25
  color: #313131
  text-rendering: optimizeLegibility
  letter-spacing: -.025rem

h1
  font-size: 1.8rem
  font-weight:bold

h2
  margin-top: 1rem
  font-size: 1.5rem

h3
  margin-top: 1.5rem
  font-size: 1.25rem

h4, h5, h6
  margin-top: 1rem
  font-size: 1rem

p
  margin-top: 0
  // margin-bottom: 1rem
  text-align: justify

strong
  color: #303030


  /*
   * Custom type
   *
   * Extend paragraphs with `.lead` for larger introductory text.
   */

.lead
  font-size: 1.25rem
  font-weight: 300

  /* Lists */
ul, ol, dl
  margin-top: 0
  margin-bottom: 1rem

dt
  font-weight: bold

dd
  margin-bottom: .5rem
