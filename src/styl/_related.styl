/* Related posts */
.related
  padding-top: 1rem
  padding-bottom: 1rem
  border-top: 1px solid #eee

.related-posts
  padding-left: 0
  list-style: none
  h2
    font-size: 75%
  h3
    margin-top: 0
    font-size: 75%
  li small
    font-size: 75%
    color: #999
  li a:hover
    color: #268bd2
    text-decoration: none
  li a:hover small
    color: inherit
